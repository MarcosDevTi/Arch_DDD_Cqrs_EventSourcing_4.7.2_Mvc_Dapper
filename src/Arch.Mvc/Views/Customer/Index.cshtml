@model IEnumerable<Arch.CqrsClient.Models.CustomerItemIndex>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (ViewBag.MessageSuccess != null)
{
    <div style="margin-top:10px;" class="alert alert-success" role="alert">
        <p>@ViewBag.MessageSuccess</p>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>@Html.ActionLink("Edit", "Edit", new { customerId = item.Id }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("History", "History", "EventSourcing", new { aggregateId = item.Id, controllerName = "Customer", actionName = "Index" }, new { @class = "btn btn-success" })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { item.Id }, new { @class = "btn btn-danger" })</td>


        </tr>
    }

</table>
